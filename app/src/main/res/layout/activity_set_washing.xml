<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Back_color"
    tools:context="com.example.l3all_cpe.goatfarm2.SetWashing">

    <RelativeLayout
        android:id="@+id/haed_app"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Black">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_app" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:text="@string/app_name"
            android:textColor="@color/White"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head_detail"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/haed_app"
        android:background="#fdfbff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="ตั้งค่าการล้างภาชนะ"
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back" />

    </RelativeLayout>

    <TableRow
        android:layout_marginTop="10dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="คอกที่ : "
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/txtStallWashing"
            android:textColor="@color/Black"
            android:text="เลือกคอก" />

    </TableRow>
    <Button
        android:id="@+id/btStallWashing"
        android:layout_height="40dp"
        android:text="เลือกคอก" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btActiveWashing"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ล้างทันที"
            android:textColor="@color/White"
            android:background="@color/Button_color"/>

    </RelativeLayout>
    <TextView

        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="ตั้งเวลาล้างอัตโนมัติ"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="หลังจากให้อาหาร"
            android:textColor="@color/Black"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"

            />
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="ชั่วโมง"
            android:textColor="@color/Black"

            />
    </TableRow>



    <LinearLayout

        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="บันทึก"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ยกเลิก"
            android:textColor="@color/Black" />
    </LinearLayout>
</TableLayout>
